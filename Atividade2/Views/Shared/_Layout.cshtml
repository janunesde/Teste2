@using Microsoft.AspNetCore.Http
@using Atividade2.Models
@model Pacote
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Viagem Alegre</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1 class="col-xs-12 col-sm-12 col-md-6 col-lg-6 text-center display-2">Viagem Alegre </h1>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Usuario" asp-action="Principal">Principal</a>
                  <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Pacote">Pacotes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Viagens">Viagens</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @if (Context.Session.GetInt32("id") == null){
            <a class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="Login">Login</a>
             } else{
              <a class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="Logout">Logout</a>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
              <div class="cols-xs-3">
              <table class="table table-striped">
                    <tr>
                        <th>Viagem</th>
                        <th>Atrativos</th>
                        <th>Origem</th>
                        <th>Destino</th>
                        <th>Saida</th>
                        <th>Retorno</th>
                        <th>Compre</th>
                     </tr>
                @{
              
                        PacoteRepository a = new PacoteRepository();
                }
                    @foreach(Pacote P in a.Listar()){            
                     <tr>
                         <td>@P.Nome</td>
                         <td>@P.Atrativos</td>
                         <td>@P.Origem</td>
                         <td>@P.Destino</td>
                         <td>@P.Saida</td>
                         <td>@P.Retorno</td>
                        <td>
                            <a lass="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="Compra">Comprar</a>
                         </td>
                     </tr>        
                     }                
                </table>
              </div>  
            </main>
        </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - José Antônio Nunes de Morais - <a asp-area="" asp-controller="Usuario" asp-action="Principal">Principal</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
