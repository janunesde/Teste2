@model Usuario
<div>
 <h2 class="text-center">Cadastro de Usuário</h2>
 <p>@ViewBag.Mensagem</p>
 <table class="table table-hover text-centered"">
     <tr>
 <form asp-action="CadastroUsuario" method="POST">
     <label asp-for="Nome">Nome:</label>
     <input asp-for="Nome" type="text">
     <label asp-for="DataNascimento">Data de Nascimento:</label>
     <input asp-for="DataNascimento" type="text">
      <p>   
     <label asp-for="Login">Login:</label>
     <input asp-for="Login" type="text">
    
     <label asp-for="Senha">Senha:</label>
     <input asp-for="Senha" type="password">
     </p>
     <p>
         <label>Tipo:</label>
     <select asp-for="Tipo" name="Tipo">
         <option value="1">Administrador</option>
         <option value="2">Usuário comum</option>
         <option value="3">Outros usuários</option>
     </select>         
     <input type="submit" value="Cadastrar">
     </p>
 </form>
 </tr>
 </table>
</div>
